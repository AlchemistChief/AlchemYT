{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "strict": true,
        "strictNullChecks": false,
        "lib": [
            "es6" // Ensure "dom" is not included here
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "ws"
        ]
    }
}